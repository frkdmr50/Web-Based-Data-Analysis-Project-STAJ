from flask import Flask, render_template, request, redirect, url_for
from flask_mail import Mail, Message

app = Flask(__name__)

# Mail ayarları
app.config['MAIL_SERVER'] = 'mail.server.com'
app.config['MAIL_PORT'] = 587
app.config['MAIL_USE_TLS'] = True
app.config['MAIL_USERNAME'] = 'your-email@example.com'
app.config['MAIL_PASSWORD'] = 'your-password'

mail = Mail(app)

# Ana sayfa
@app.route('/')
def index():
    return render_template('index.html')

# Rezervasyon formu
@app.route('/rezervasyon', methods=['GET', 'POST'])
def rezervasyon():
    if request.method == 'POST':
        sahis_isim = request.form['sahis_isim']
        firma_isim = request.form['firma_isim']
        telefon = request.form['telefon']

        # E-posta gönderimi
        msg = Message('Yeni Rezervasyon',
                      sender='your-email@example.com',
                      recipients=['web-site-email@example.com'])
        msg.body = f'Sahis Ismi: {sahis_isim}\nFirma Ismi: {firma_isim}\nTelefon: {telefon}'
        mail.send(msg)

        return redirect(url_for('index'))  # Ana sayfaya yönlendir

    return render_template('rezervasyon.html')

# Iletisim sekmesi
@app.route('/iletisim')
def iletisim():
    return render_template('iletisim.html')

if __name__ == '__main__':
    app.run(debug=True)
